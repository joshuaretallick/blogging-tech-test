<h1>Listing Articles</h1>

<% @articles.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |article| %>
      <div class="col-md-4">
        <%= image_tag article.picture_url, width: '100%' if article.picture.present? %>
        <h4><%= link_to article.name, article %></h4>
        <%= article.description %>
        <% if article.categories.any? %>
          <div class="mt-2"><%= render article.categories %></div> 
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to 'New Article', new_article_path %>
